{
  "name": "sass-affected",
  "version": "1.1.0",
  "description":
    "Map SASS file changes to the root file(s) that are affected, helping create more efficient regression tests.",
  "directories": {
    "bin": "./bin"
  },
  "keywords": ["diff", "html", "regression", "sass", "test"],
  "homepage": "https://github.com/insurancezebra/sass-affected#readme",
  "bugs": {
    "url": "https://github.com/insurancezebra/sass-affected/issues"
  },
  "license": "ISC",
  "author": "John Apostol <notimetobeidle@gmail.com>",
  "files": ["bin", "dist"],
  "main": "dist/sass-affected.cjs.js",
  "module": "dist/sass-affected.es.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/insurancezebra/sass-affected.git"
  },
  "scripts": {
    "build": "bili --format cjs,es --target node:6",
    "clean": "rimraf dist",
    "precommit":
      "npm run test-coverage && lint-staged && npm run type-check && npm run build && git add dist",
    "lint-fix": "eslint ./src --fix",
    "release": "release-it",
    "test": "jest",
    "test-coverage": "jest --coverage --no-cache --maxWorkers=6 --silent",
    "type-check": "flow check"
  },
  "dependencies": {
    "firstline": "^1.3.0",
    "sass-graph": "^3.0.0",
    "yargs": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-transform-async-to-generator": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/preset-flow": "^7.0.0-beta.44",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "bili": "^3.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-prettier": "^2.6.0",
    "flow-bin": "0.70.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "prettier": "^1.11.1",
    "release-it": "^7.4.2",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.js", "!**/node_modules/**"],
    "coverageDirectory": "coverage"
  },
  "lint-staged": {
    "src/*.js": ["eslint --fix", "git add"]
  }
}
